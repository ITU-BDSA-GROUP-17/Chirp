@* source https://stackoverflow.com/questions/20799658/how-can-i-pass-parameters-to-a-partial-view-in-mvc-4 *@
@{
 var viewModel = ViewData["ViewModel"] as ViewModel;
}

@if (viewModel.Cheeps.Any())
{
    <ul class="flex flex-col gap-5">
    @foreach (var cheep in viewModel.Cheeps)
        {
            <div  class="border-2 border-black resize-none shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline flex flex-col gap-4">
          <li
               >

                <p class="text-black text-sm font-semibold hover:underline">
                    <img class="inline-block h-10 w-10 rounded-full"
                        src="https://assets.phillips.com/image/upload/t_Website_LotDetailMainImage/v1/auctions/NY000208/52_001.jpg"
                        alt="" />
                    <strong>
                        <a href="/@cheep.AuthorName">@cheep.AuthorName</a>
                    </strong>
                    <span
                        class="text-sm leading-5 font-medium text-black-400 group-hover:text-black-300 transition ease-in-out duration-150">
                        @cheep.TimeStamp
                    </span>
                </p>
                <p class="text-blue-400 text-sm font-medium text-clip overflow-hidden">
                   <small class="text-blue-400 text-sm font-medium text-clip overflow-hidden">@cheep.Message</small
                </p>
            </li>
            </div>
  



        }
    </ul>
}
else
{
    <em>There are no cheeps so far.</em>
}
<div class="pagination">
    @if (viewModel.pageNr > 1)
    {
        <a href="?page=@(viewModel.pageNr - 1)">&laquo;</a>
    }
    @for (int i = 0; i < viewModel.pages; i++)
    {
        <a href="?page=@(i+1)">@(i + 1)</a>
    }
    <a href="?page=@(viewModel.pageNr + 1)">&raquo;</a>
</div>