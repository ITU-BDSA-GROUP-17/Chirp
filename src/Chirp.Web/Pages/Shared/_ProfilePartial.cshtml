@* https://learn.microsoft.com/en-us/aspnet/web-pages/overview/ui-layouts-and-themes/9-working-with-images *@
@model Chirp.Web.Pages.UserTimelineModel

<div class="flex flex-col md:flex-row gap-4 p-4 bg-blue-200 shadow-md rounded px-8 pt-6 pb-8 mb-4 w-full md:w-full lg:w-full mx-auto mt-5">
    <div class="flex flex-col">
        <h2 class="text-xl font-semibold">@Model.getPageName() Profile</h2>
        
    </div>

    @* source https://developer.mozilla.org/en-US/docs/Web/API/File_API/Using_files_from_web_applications *@


    <form action="" method="post" enctype="multipart/form-data"
        class="flex flex-col items-center justify-center w-full h-48 bg-gray-100 border-2 border-gray-300 rounded-md"
        id="input-div">
        <div class="flex flex-col items-center justify-center w-full h-full text-center">
            <div class="flex flex-col items-center justify-center w-16 h-16 bg-gray-300 rounded-full">
                <svg class="w-8 h-8 text-gray-600 fill-current" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                    <path d="M0 0h24v24H0z" fill="none" />
                    <path
                        d="M12 2a10 10 0 0 0-7.64 16.32l1.88-1.1A8 8 0 1 1 4.1 12H2.07A10 10 0 1 0 12 2zm0 18a8 8 0 1 1 5.93-13.69l-1.88 1.1A6 6 0 1 0 14.9 12h2.03A8 8 0 0 1 12 20z" />
                </svg>
            </div>
            <p class="pt-1 text-sm tracking-wider text-gray-600">Drag and drop</p>
            <p class="text-sm tracking-wider text-gray-600">or</p>
            <input type="file" id="fileElem" multiple accept="image/*" style="display:none" asp-for="Upload"/>
            <p id="fileSelect" class="pt-1 text-sm tracking-wider text-gray-600">click to
                upload</p>
        </div>
        <button id="upload-button"
            class=" border-2 border-black hover:bg-black text-black hover:text-white bg-transparent  py-2 px-4 hover:border-transparent rounded w-full md:w-auto">Upload</button>
    </form>
</div>
