@page "/{page?}"
@model Chirp.Web.Pages.PublicModel
@{
    ViewData["Title"] = "Chirp!";
    Layout = "Shared/_Layout";

}

<div class="flex flex-col text-white gap-10 mt-5  items-center justify-center">
    <div>
        <h2 class="text-3xl font-semibold"> Public Timeline </h2>
    </div>

    @if (Model.Cheeps.Any())
    {
        <hr class=" border-gray-600 ">
        <ul class="flex flex-col gap-5 border border-t-[0px] border-black">
            @foreach (var cheep in Model.Cheeps)
            {
                <hr class="border-gray-600">

                <div class="flex flex-shrink-0 p-4 pb-0 ">
                    <a href="#" class="flex-shrink-0 group block ">
                        <div class="flex items-center">
                            <div>
                                <img class="inline-block h-10 w-10 rounded-full"
                                    src="https://assets.phillips.com/image/upload/t_Website_LotDetailMainImage/v1/auctions/NY000208/52_001.jpg"
                                    alt="" />
                            </div>
                            <div class="ml-3">
                                <p class="text-base leading-6 font-medium text-white">
                                    <a href="/@cheep.AuthorName">@cheep.AuthorName</a>
                                    -
                                    <span
                                        class="text-sm leading-5 font-medium text-black-400 group-hover:text-black-300 transition ease-in-out duration-150">
                                        @cheep.TimeStamp
                                    </span>
                                </p>
                            </div>
                        </div>
                    </a>
                </div>
                <div>
                    <p class="text-base width-auto font-medium text-white flex-shrink">
                        @cheep.Message
                    </p>
                </div>



            }
        </ul>
    }
    else
    {
        <em>There are no cheeps so far.</em>
    }
    <div class="pagination">
        @if (Model.pageNr > 1)
        {
            <a href="?page=@(Model.pageNr - 1)">&laquo;</a>
        }
        @for (int i = 0; i < Model.pages; i++)
        {
            <a href="?page=@(i+1)">@(i + 1)</a>
        }
        <a href="?page=@(Model.pageNr + 1)">&raquo;</a>
    </div>

</div>
